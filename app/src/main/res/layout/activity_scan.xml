<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:orientation="vertical" android:padding="0dp"
        android:layout_height="wrap_content" android:gravity="fill_vertical" >

        <LinearLayout android:layout_height="wrap_content"
            android:layout_width="wrap_content" android:orientation="horizontal"
            android:gravity="fill_horizontal"
            android:background="@drawable/round_corner_rectangle"
            android:layout_margin="1dp">

            <FrameLayout android:layout_height="wrap_content"
            android:layout_width="wrap_content" android:orientation="vertical"
            android:gravity="fill_vertical" >
                <!--android:layout_marginRight="25dp"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="0dp"-->
                <ImageButton
                    android:id="@+id/imageButton_bus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="scan ticket"
                    android:textStyle="bold"
                    android:layout_alignEnd="@+id/tv_question"
                    android:layout_alignRight="@+id/tv_question"
                    android:background="#00ffffff"
                    android:src="@drawable/bus"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="105dp"
                    android:clickable="false"
                    android:text="    Bus" >
                </TextView>
            </FrameLayout>

            <FrameLayout android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="vertical"
                android:gravity="fill_vertical" >

                <ImageButton
                    android:id="@+id/imageButton_hotel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="scan and pay"
                    android:textStyle="bold"
                    android:layout_alignEnd="@+id/tv_question"
                    android:layout_alignRight="@+id/tv_question"
                    android:background="#00ffffff"
                    android:src="@drawable/hotel"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="105dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:clickable="false"
                    android:text="    Hotel" >
                </TextView>
            </FrameLayout>

            <FrameLayout android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="vertical"
                android:gravity="fill_vertical" >

                <ImageButton
                    android:id="@+id/imageButton_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="bank transfer"
                    android:textStyle="bold"
                    android:layout_alignEnd="@+id/tv_question"
                    android:layout_alignRight="@+id/tv_question"
                    android:background="#00ffffff"
                    android:src="@drawable/shop"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="105dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:clickable="false"
                    android:text="    Shop" >
                </TextView>
            </FrameLayout>
            <FrameLayout android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="vertical"
                android:gravity="fill_vertical" >

                <ImageButton
                    android:id="@+id/imageButton_theatre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="scan ticket"
                    android:textStyle="bold"
                    android:layout_alignEnd="@+id/tv_question"
                    android:layout_alignRight="@+id/tv_question"
                    android:background="#00ffffff"
                    android:src="@drawable/theatre"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="105dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:clickable="false"
                    android:text="   Movie" >
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="118dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:clickable="false"
                    android:text="  Theatre" >
                </TextView>

            </FrameLayout>
        </LinearLayout>

        <LinearLayout android:layout_height="wrap_content"
            android:layout_width="wrap_content" android:orientation="horizontal"
            android:gravity="fill_horizontal" android:layout_margin="1dp"
            android:background="@drawable/round_corner_rectangle">


            <FrameLayout android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="vertical"
                android:gravity="fill_vertical" >

                <ImageButton
                    android:id="@+id/imageButton_library"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="scan and pay"
                    android:textStyle="bold"
                    android:layout_alignEnd="@+id/tv_question"
                    android:layout_alignRight="@+id/tv_question"
                    android:background="#00ffffff"
                    android:src="@drawable/library"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="105dp"
                    android:clickable="false"
                    android:text="    Library" >
                </TextView>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout android:layout_height="wrap_content"
            android:layout_width="wrap_content" android:orientation="horizontal"
            android:gravity="fill_horizontal" android:layout_margin="10dp">
            <EditText
                android:id="@+id/HTTP_response"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="text"
                android:text="HTTP-response"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>